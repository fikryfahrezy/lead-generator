generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("AKSEL_DATABASE_URL")
}

model Lead {
  id      Int    @id @default(autoincrement())
  keyword String @default("") @db.VarChar(100)
  /// Save the `status` field as string in database
  /// manage the "enum" in app level for flexibility
  status  String @default("") @db.VarChar(15)
  phone   String @default("") @db.VarChar(20)
  email   String @default("") @db.VarChar(50)
  address String @default("") @db.VarChar(255)

  @@map("leads")
}
